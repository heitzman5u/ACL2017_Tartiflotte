<project name="ACL2017_Tartiflotte">
	<property name="src.dir" value="src"/>
	<property name="bin.dir" value="bin"/>
	<property name="jar.dir" value="exe"/>
	<property name="lib.dir" value="lib"/>
	<property name="main-class" value="model.Main"/>
	<property name="jar.name" value="Tartiflotte.jar"/>
	<property name="native.path" value="lib/natives"/>
	<property name="resources.dir" value="res"/>
	
	<path id="project.class.path">
		<pathelement location="src/"/>
		<pathelement location="res/"/>
	</path>
	
	<target name="run" depends="jar">
		<java jar="${jar.dir}/${jar.name}" fork="true">
			<jvmarg value="-Djava.library.path=lib/natives" />
		</java>
	</target>
	<target name="clean">
		<delete dir="${jar.dir}"/>
		<delete dir="${bin.dir}"/>
		<echo message="nettoyage terminé"/>
	</target>
	<target name="compile">
		<mkdir dir="${bin.dir}"/>
		<javac srcdir="${src.dir}" destdir="${bin.dir}">
			<classpath>
				<fileset dir="${lib.dir}">
					<include name="**/*.jar"/>
				</fileset>
				<fileset dir="${resources.dir}">
				</fileset>
			</classpath>
		</javac>
		<echo message="compilation terminée"/>
	</target>
	<target name="jar" depends="compile">
		<mkdir dir="${jar.dir}"/>
		<echo message="Resources : ${resources.dir}"/>
		<jar destfile="${jar.dir}/${jar.name}" basedir="${bin.dir}">
			<zipgroupfileset dir="${lib.dir}" includes="*.jar"/>
			<fileset dir="${resources.dir}" />
			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
			</manifest>
		</jar>
		<echo message="Creation du fichier jar terminée"/>
	</target>
	
</project>